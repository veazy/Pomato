<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center">Edit your review</h1>
		<div style="width: 30%; margin: 20px auto;">
			<form action="/restaurants/<%= restaurant_id %>/reviews/<%= comment._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Update</button>
				</div>
			</form>
			<a href="/restaurants/<% restaurant_id %>">Go back</a>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>